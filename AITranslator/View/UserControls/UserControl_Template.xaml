        <vm:ViewModel/>
    </UserControl.DataContext>-->
    <ScrollViewer  Margin="5" VerticalScrollBarVisibility="Auto">
        <GroupBox BorderThickness="0.1" BorderBrush="White" Padding="0,5" Cursor="">
