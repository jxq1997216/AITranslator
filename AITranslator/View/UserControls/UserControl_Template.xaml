                <ComboBox x:Name="cb_templateDic" MinWidth="100" MaxWidth="320" Margin="5,0" Foreground="White" SelectedIndex="0" DisplayMemberPath="Name" ItemsSource="{Binding TemplateDics}"/>
            </GroupBox.Header>
            <StackPanel>
                <GroupBox BorderThickness="0.1" BorderBrush="White">
                    <GroupBox.Header>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock Text="名词替换模板" Foreground="White" FontSize="10" VerticalAlignment="Center"/>
                            <TextBlock Margin="3,0,0,0" Text="[?]" Cursor="Help" Foreground="White" FontSize="10" ToolTip="这里可以配置名词替换的模板,被翻译的文本会先查找和替换对应的名词后再进行翻译"/>
                        </StackPanel>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="cb_ReplaceTemplate" Margin="5" Foreground="White" DisplayMemberPath="Name" DataContext="{Binding SelectedItem,ElementName=cb_templateDic}" ItemsSource="{Binding ReplaceTemplate}" DataContextChanged="cb_DataContextChanged"/>

                        <StackPanel Margin="0,0,5,0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">

                            <controls:ViewButton Margin="0,0,5,0" Width="24" Height="24" ToolTip="打开文件" Command="{Binding OpenReplaceTemplateFileCommand}">
                                <Button.CommandParameter>
                                    <MultiBinding Converter="{StaticResource TemplatePath}">
                                        <Binding ElementName="cb_templateDic" Path="Text"/>
                                        <Binding ElementName="cb_ReplaceTemplate" Path="Text"/>
                                    </MultiBinding>
                                </Button.CommandParameter>
                                <controls:ViewButton.Content>
